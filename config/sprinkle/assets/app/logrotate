/home/deploy/rubydocs/shared/log/*.log {
  daily
  rotate 30
  compress
  delaycompress
  missingok
  notifempty
  sharedscripts
  postrotate
    /bin/su - deploy -c 'cd /home/deploy/rubydocs/current && bundle exec pumactl -S tmp/pids/puma.state phased-restart'
    # TODO: Use Monit's restart command when Monit >= 5.7 is used
    # monit restart rubydocs_puma
    monit restart rubydocs_sidekiq
  endscript
}
